<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <% content_for :sidebar do %>
     <p>This content goes in the div above New Book.</p>
    <% end %>
    <% content_for :head do %>
      <title>A simple page</title>
    <% end %>

    <p>Hello, Rails!</p>

  


  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.content %></td>
        <td><%= link_to "Show", book %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div id="sidebar">
  <%= yield :sidebar %>
</div>
<br>
<%= link_to "New book", new_book_path %>
